local function togglePromotion()
    if isRunning then
        isRunning = false
        spamButton.Text = "ë„ë°° ì‹œì‘"
        spamButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0) -- ë‹¤ì‹œ ë¹¨ê°„ìƒ‰ìœ¼ë¡œ ë³€ê²½
    else
        isRunning = true
        spamButton.Text = "ë„ë°° ì¤‘ì§€"
        spamButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0) -- ì´ˆë¡ìƒ‰ìœ¼ë¡œ ë³€ê²½
        spawn(function()
            while isRunning do
                local message = messages[math.random(#messages)] -- ëœë¤ ë©”ì‹œì§€ ì„ íƒ
                SayMessageRequest:FireServer(message, "All")
                wait(1) -- 1ì´ˆ ëŒ€ê¸°
            end
        end)
    end
end

