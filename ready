local Hub = script.Parent  -- í—ˆë¸Œ UIë¥¼ ì§€ì • (Hubê°€ ìŠ¤í¬ë¦½íŠ¸ì˜ ë¶€ëª¨ë¡œ ì„¤ì •ë˜ì–´ ìˆë‹¤ê³  ê°€ì •)

local isRunning = false
local message = "ğŸ–•ğŸ’©ğŸ–•ğŸ’©ğŸ–•ğŸ’©ğŸ–•ğŸ’©ğŸ–•ğŸ’©ğŸ–•ğŸ’©ğŸ–•ğŸ’©ğŸ–•ğŸ’©ğŸ–•ğŸ’©ğŸ–•ğŸ’©ğŸ–•ğŸ’©ğŸ–•ğŸ’©ğŸ–•ğŸ’©ğŸ–•ğŸ’©ğŸ–•ğŸ’©ğŸ–•"

-- ì±„íŒ…ì°½ ë”ëŸ½íˆê¸° ë²„íŠ¼ì„ í´ë¦­í–ˆì„ ë•Œ ë©”ì‹œì§€ë¥¼ ë³´ë‚´ëŠ” í•¨ìˆ˜
local function startSpamming()
    if isRunning then
        isRunning = false
        print("ë„ë°° ì¤‘ì§€")
    else
        isRunning = true
        print("ë„ë°° ì‹œì‘")
        spawn(function()
            while isRunning do
                game:GetService("ReplicatedStorage").SayMessageRequest:FireServer(message, "All") -- ê³ ì •ëœ ë©”ì‹œì§€ ì „ì†¡
                wait(1) -- 1ì´ˆ ê°„ê²©ìœ¼ë¡œ ë©”ì‹œì§€ ì „ì†¡
            end
        end)
    end
end

-- ë²„íŠ¼ ìƒì„± í•¨ìˆ˜
local function createButton(parent, text, size, position)
    local Button = Instance.new("TextButton")
    Button.Parent = parent
    Button.Text = text
    Button.Size = size
    Button.Position = position
    Button.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
    
    Button.MouseButton1Click:Connect(function()
        -- ê° ë²„íŠ¼ í´ë¦­ ì‹œ ìˆ˜í–‰í•  ì‘ì—…
        if text == "ì±„íŒ…ì°½ ë”ëŸ½íˆê¸°" then
            startSpamming()  -- ì±„íŒ…ì°½ ë”ëŸ½íˆê¸° ë²„íŠ¼ í´ë¦­ ì‹œ ë„ë°° ì‹œì‘/ì¤‘ì§€
        elseif text == "Settings" then
            print("Settings ë²„íŠ¼ì„ í´ë¦­í–ˆìŠµë‹ˆë‹¤!")
        elseif text == "Shop" then
            print("Shop ë²„íŠ¼ì„ í´ë¦­í–ˆìŠµë‹ˆë‹¤!")
        elseif text == "Exit" then
            print("Exit ë²„íŠ¼ì„ í´ë¦­í–ˆìŠµë‹ˆë‹¤!")
        elseif text == "Button 5" then
            print("Button 5 í´ë¦­ë¨!")
        elseif text == "Button 6" then
            print("Button 6 í´ë¦­ë¨!")
        end
    end)

    return Button
end

-- ë²„íŠ¼ ë°°ì¹˜ ì„¤ì •
local buttonSize = UDim2.new(0.25, 0, 0.2, 0) -- ë²„íŠ¼ í¬ê¸°
local positions = {
    {0.125, 0.15}, {0.625, 0.15}, -- ì²« ë²ˆì§¸ ì¤„ (2ê°œ)
    {0.125, 0.4}, {0.625, 0.4}, -- ë‘ ë²ˆì§¸ ì¤„ (2ê°œ)
    {0.125, 0.65}, {0.625, 0.65} -- ì„¸ ë²ˆì§¸ ì¤„ (2ê°œ)
}

-- í—ˆë¸Œ UIì— ë²„íŠ¼ ìƒì„±
createButton(Hub, "ì±„íŒ…ì°½ ë”ëŸ½íˆê¸°", buttonSize, UDim2.new(positions[1][1], 0, positions[1][2], 0))
createButton(Hub, "Settings", buttonSize, UDim2.new(positions[2][1], 0, positions[2][2], 0))
createButton(Hub, "Shop", buttonSize, UDim2.new(positions[3][1], 0, positions[3][2], 0))
createButton(Hub, "Exit", buttonSize, UDim2.new(positions[4][1], 0, positions[4][2], 0))
createButton(Hub, "Button 5", buttonSize, UDim2.new(positions[5][1], 0, positions[5][2], 0))
createButton(Hub, "Button 6", buttonSize, UDim2.new(positions[6][1], 0, positions[6][2], 0))
